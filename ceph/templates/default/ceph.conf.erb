[global]
  auth supported = none

[mon]
  mon data = /srv/mon

<% @mon.each do |host| %>
[mon.<%= host["hostname"] %>]
  host = <%= host["hostname"] %>
  mon addr = <%= host["ipaddress"] %>:6789
<% end %>

[mds]

<% @mds.each do |host| %>
[mds.<%= host["hostname"] %>]
  host = <%= host["hostname"] %>
<% end %>

[osd]
  osd data = /srv/$name
  osd journal = /srv/$name.journal
  osd journal size = 1000

<% @osd.each do |host| %>
[osd.<%= host["ceph"]["osd_id"] %>]
  host = <%= host["hostname"] %>
<% end %>

